            <organization>Linneuniversitetet</organization>
            <organizationUrl>http://lnu.se</organizationUrl>
            <roles>
                <role>developer</role>
            </roles>
        </developer>
    </developers>

    <properties>
        <maven.build.timestamp.format>ddMMyyyy-HHmm</maven.build.timestamp.format>
